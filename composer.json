{
    "name": "titonova/laravel-referral",
    "description": "A package for Laravel to register referrals with ease.",
    "keywords": [
        "titonova",
        "laravel-referral"
    ],
    "homepage": "https://github.com/titonova/laravel-referral",
    "license": "MIT",
    "authors": [
        {
            "name": "Robnnnnnnnnnnnnnnnnnnnnnnnnin Dhhirksen",
            "email": "robin@titonova.nl",
            "homepage": "https://robindirksen.com",
            "role": "Developer"
        }
    ],

    "require": {
        "php": "^7.2|^7.3|^7.4|^8.0",
        "illuminate/database": "^5.8|^6.0|^7.0|^8.0|^9.0|^10.0",
        "illuminate/http": "^5.8|^6.0|^7.0|^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-laravel": "^1.4",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "titonova\\LaravelReferral\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "titonova\\LaravelReferral\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "titonova\\LaravelReferral\\LaravelReferralServiceProvider"
            ]
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
